@model List<DealDouble.Entities.Auction>

<div id="listingArea">
        <table>
            <thead>
                <tr>
                    <th>
                        Title
                    </th>
                    <th>
                        Description
                    </th>
                    <th>
                        ActualAmount
                    </th>
                    <th>
                        Starting Time
                    </th>
                    <th>
                        Ending Time
                    </th>
                    <th>
                        Actions
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var auction in Model)
                {
                    <tr>
                        <td>
                            <input type="hidden" name="ID" value="@auction.ID" />
                            @auction.Title
                        </td>
                        <td>
                            @auction.Description
                        </td>
                        <td>
                            @auction.ActualAmount
                        </td>
                        <td>
                            @auction.StartingTime
                        </td>
                        <td>
                            @auction.EndingTime
                        </td>
                        <td>

                            <a href="Edit/@auction.ID">Edit</a>
                            <a href="Delete/@auction.ID">Delete</a>
                        </td>
                    </tr>

                }
            </tbody>
        </table>
    </div>


<div>
    <button id="createButton">Create New Auction</button>
</div>

<div id="contentArea">
    
</div>

<script>
    $("#createButton").click(function () {
        $.ajax({
            url: "Create/",
            method: "get"

        }).done(function (response) {
            

            $("#contentArea").html(response);
        });

    });
</script>