<br />
<h2>
    Create Auction
</h2>

<form id="createForm" method="post" action="Auctios/Create/">

    <div class="form-group">
        <label>
            Title
        </label>
        <input class="form-control" name="Title" />
    </div>

    <div class="form-group">
        <label>
            Description
        </label>
        <input class="form-control" name="Description" />
    </div>

    <div class="form-group">
        <label>
            ActualAmount
        </label>
        <input class="form-control" name="ActualAmount" />
    </div>

    <div class="form-group">
        <label>
            StartingTime
        </label>
        <input class="form-control" name="StartingTime" />
    </div>

    <div class="form-group">
        <label>
            EndingTime
        </label>
        <input class="form-control" name="EndingTime" />
    </div>

    <br />

    <button class="btn btn-primary" type="button" id="saveButton">
        Save
    </button>
    
</form>
<br />
<script>
    $("#saveButton").click(function () {
        $.ajax({
            url: "Create/",
            method: "post",
            data: $("#createForm").serialize()
        })
            .done(function (response) {
                debugger;
                $("#listingArea").html(response);

            });
    });
</script>

